<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/writelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/memobg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/snowImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/snowImage7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/startm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/start" />
                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/play" />

                <ImageButton
                    android:id="@+id/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/pause" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:src="@drawable/gallery"
                    android:layout_marginRight="15dp" />

                <ImageButton
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2E2E2E"
                    android:layout_marginRight="15dp"
                    android:background="#00ff0000"
                    android:src="@drawable/save" />

                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_marginRight="25dp"
                    android:background="#00ff0000" />

            </LinearLayout>

            <CalendarView
                android:id="@+id/Dcalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/emoji1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:layout_marginRight="5dp"
                    android:maxLength="2"
                    android:textSize="20pt"
                    android:hint="🎄" />

                <EditText
                    android:id="@+id/emoji2"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:layout_marginRight="5dp"
                    android:textSize="20pt"
                    android:maxLength="2"
                    android:hint="🎠" />


                <EditText
                    android:id="@+id/emoji3"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:textSize="20pt"
                    android:maxLength="2"
                    android:hint="🍦" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/d_write"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:bufferType="spannable"
                android:background="@null"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:fontFamily="@font/poetic"
                android:text="\n\n\n\n\n\n\n\n"
                android:gravity="top" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>